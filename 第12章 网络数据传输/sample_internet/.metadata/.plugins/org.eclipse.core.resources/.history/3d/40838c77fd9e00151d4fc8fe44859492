package cn.edu.zstu;

import java.io.IOException;
import java.io.Writer;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

public class bookJsonData extends HttpServlet {

	final String text="{"+
			"\"id\":1,"+
			"    \"sex\": \"female\","+
			"    \"age\": 18,"+
			"    \"name\": \"Alice\","+
			"    \"books\": ["+
			"        {"+
			"            \"bookname\": \"Android development\","+
			"            \"bookdescribe\": \"Android development book\","+
			"            \"bookurl\": \"http://pic4.nipic.com/20091112/3650425_212418707915_2.jpg\""+
			"        },"+
			"        {"+
			"            \"bookname\": \"IOS development\","+
			"            \"bookdescribe\": \"IOS development book\","+
			"            \"bookurl\": \"http://imgsrc.baidu.com/forum/pic/item/b64543a98226cffce98283f1b9014a90f703eacd.jpg\""+
			"        },"+
			"        {"+
			"            \"bookname\": \"Web development\","+
			"            \"bookdescribe\": \"WEb development book\","+
			"            \"bookurl\": \"http://www.qqpk.cn/Article/UploadFiles/201407/20140711101445200.jpg\""+
			"        }"+
			"    ]"+
			"}";
	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse resp)
			throws ServletException, IOException {
		String name=(String) req.getParameter("name");
		
		if(name.contains("Alice")){
			Writer out= resp.getWriter();
			out.write(text);
			out.flush();
			out.close();
		}
		//super.doGet(req, resp);
	}

	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp)
			throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(req,resp);
		//super.doPost(req, resp);
	}
	

}
