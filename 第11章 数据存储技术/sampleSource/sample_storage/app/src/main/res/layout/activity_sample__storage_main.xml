<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Sample_Storage_main">

    <TextView android:text="tb_user数据库测试" android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_height="wrap_content"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:text="名字："
        android:layout_below="@id/tv_title"
        android:textSize="28sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_name"
        android:layout_below="@id/tv_title"
        android:layout_toRightOf="@id/tv_name"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_sex"
        android:text="性别："
        android:layout_below="@id/tv_name"
        android:textSize="28sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_sex"
        android:layout_below="@id/tv_name"
        android:layout_toRightOf="@id/tv_sex"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_age"
        android:text="年龄："
        android:layout_below="@id/tv_sex"
        android:textSize="28sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_age"
        android:layout_below="@id/tv_sex"
        android:layout_toRightOf="@id/tv_age"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Insert"
        android:layout_below="@id/tv_age"
        android:text="插入数据库"
        android:gravity="center"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnshowdata"
        android:layout_alignParentBottom="true"
        android:text="显示数据"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_Insert"
        android:layout_above="@id/btnshowdata"
        android:id="@+id/lst_subject"></ListView>

</RelativeLayout>
