<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/tv_usernme"
        android:layout_width="wrap_content"        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"     android:layout_alignParentTop="true"
        android:layout_margin="12dp" android:text="用户名："  android:textSize="18sp" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="match_parent"  android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_usernme" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"      android:layout_height="wrap_content"
        android:layout_below="@id/et_username"   android:layout_margin="12dp"
        android:text="密   码："        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"      android:layout_height="wrap_content"
        android:layout_below="@id/et_username"  android:password="true"
        android:layout_toRightOf="@id/tv_password" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"   android:layout_height="wrap_content"
        android:layout_below="@id/et_password"      android:layout_margin="12dp"
        android:text="登录"        android:textSize="18sp" />
</RelativeLayout>
